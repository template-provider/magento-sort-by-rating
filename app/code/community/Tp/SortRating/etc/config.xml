<?xml version="1.0" ?>
<config>
    <modules>
        <Tp_SortRating>
            <version>1.0.0</version>
        </Tp_SortRating>
    </modules>
    <global>
        <blocks>
            <catalog>
                <rewrite>
                    <product_list_toolbar>Tp_SortRating_Block_Product_List_Toolbar</product_list_toolbar>
                </rewrite>
            </catalog>
        </blocks>
        <models>
            <sortrating>
                <class>Tp_SortRating_Model</class>
            </sortrating>
            <catalog>
                <rewrite>
                    <config>Tp_SortRating_Model_Config</config>
                </rewrite>
            </catalog>
            <adminhtml>
                <rewrite>
                    <system_config_source_catalog_listSort>
                        Tp_SortRating_Model_Adminhtml_System_Config_Source_Catalog_ListSort
                    </system_config_source_catalog_listSort>
                </rewrite>
            </adminhtml>
        </models>
        <resources>
            <sortrating_setup>
                <setup>
                    <module>Tp_SortRating</module>
                    <class>Tp_SortRating_Model_Mysql4_Setup</class>
                </setup>
            </sortrating_setup>
        </resources>
    </global>
    <crontab>
        <jobs>
            <Tp_SortRating_update>
                <schedule>
                    <cron_expr>0 0 * * *</cron_expr>
                </schedule>
                <run>
                    <model>sortrating/observer::updateRating</model>
                </run>
            </Tp_SortRating_update>
        </jobs>
    </crontab>
</config>
